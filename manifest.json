{
  "name": "PubPeer",
  "description": "Show links to existing PubPeer comments",
  "version": "0.3.3",
  "manifest_version": 2,
  "content_scripts": [
    {
      "js": [
        "sanitizer.js",
        "pubpeer.js"
      ],
      "matches": ["*://*/*"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "https://api.pubpeer.com/",
    "https://pubpeer.com/",
    "https://pubpeer.dev/",
    "storage"
  ],
  "icons": {
    "128": "pubpeer-128x128.png",
    "16": "pubpeer-16x16.png",
    "48": "pubpeer-48x48.png"
  }
}
